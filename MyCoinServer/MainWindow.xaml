<Window x:Class="MyCoinServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCoinServer"
        mc:Ignorable="d"
        xmlns:Views="clr-namespace:MyCoinServer.Views"
        Title="MainWindow" Height="450" Width="800">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Background="BlueViolet">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="Administrateur" VerticalContentAlignment="Center" Foreground="White" FontSize="17" FontWeight="DemiBold" />
                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Height="40" Source="Ressources/User.png"/>
                    <Label Content="Username" Foreground="White" FontWeight="DemiBold" Grid.Column="1" VerticalContentAlignment="Center"/>
                </Grid>
              
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid>
                    <Views:UserListActif/>
                </Grid>
                <Grid  Grid.Column="1">
                    <Views:LatestTransactions/>
                </Grid>
                <Grid  Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Détails sur les utilisateurs" FontWeight="DemiBold" FontSize="14" />
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Content="Utilisateurs total:"/>
                        <Label Content="Utilisateurs connecté:  " Grid.Row="1"/>
                        <Label Content="Invitations:  " Grid.Row="2"/>
                        <Label Content="12" Grid.Column="1" HorizontalContentAlignment="Left"/>
                        <Label Content="5" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Left"/>
                        <Label Content="2" Grid.Column="1" Grid.Row="2" HorizontalContentAlignment="Left"/>
                    </Grid>
                </Grid>
            </Grid>
           
        </Grid>
    </ScrollViewer>
</Window>
