<UserControl x:Class="MyCoinServer.Views.UserListActif"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyCoinServer.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="450" d:DesignWidth="400">
    <ScrollViewer>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Demandes d'inscription" HorizontalContentAlignment="Center" FontWeight="DemiBold" FontSize="14"/>
        <StackPanel Grid.Row="1" Margin="7">
            <materialDesign:Card Padding="5" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="@" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Right"/>
                    <Label Grid.Column="1" FontWeight="Bold" Content="username" VerticalContentAlignment="Center"/>
                    
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Background="Green" Foreground="White" Margin="10 0 5 0" Content="Accepter"/>
                        <Button Grid.Column="1" BorderThickness="0" Margin="5 0 10 0" BorderBrush="Transparent" Background="Red" Foreground="White" Content="Refuser"/>
                    </Grid>
                </Grid>
            </materialDesign:Card>
            <materialDesign:Card Padding="5"  Margin="0 5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="@" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Right"/>
                    <Label Grid.Column="1" FontWeight="Bold" Content="username" VerticalContentAlignment="Center"/>

                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Background="Green" Foreground="White" Margin="10 0 5 0" Content="Accepter"/>
                        <Button Grid.Column="1" BorderThickness="0" Margin="5 0 10 0" BorderBrush="Transparent" Background="Red" Foreground="White" Content="Refuser"/>
                    </Grid>
                </Grid>
            </materialDesign:Card>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
